
@model Category

<h2 class="text-primary">Edit Category</h2>
<form method="post" asp-action="EditCategory">
    <div class="border p-3 mt-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
        <br/>
        <label asp-for="DisplayOrder"></label>
        <input asp-for="DisplayOrder" class="form-control" />
        <input class="visually-hidden" asp-for="Id" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        <br />
        <button class="btn btn-primary" type="submit">Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back to Category List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
